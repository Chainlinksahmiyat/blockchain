{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"],
    "baseUrl": "../",
    "paths": {
      "*": ["node_modules/*", "./types/*"]
    }
  },
  "include": ["**/*.ts", "../server/**/*.ts"]
}
